.short_banner
  =link_to new_nomination_path do
    %h1.action_button Nominate a Speaker!

.year_banner
  .wrapper
    %h1= 2016
    %h2 Nominations

.wrapper
  - @nominations.each do |nomination|
    = link_to nomination do
      .object_box.hvr-sweep-to-left
        %p Speaker
        %h3= nomination.speaker_name
        %p Nominated By
        %h3= nomination.submitter_name
        - if can? :delete, Nomination
          = link_to "Delete Nomination", nomination, method: :delete
