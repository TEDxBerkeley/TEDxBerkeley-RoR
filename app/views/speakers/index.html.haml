.short_banner
  %h1 Speakers

.year_banner
  .wrapper
    %h1= 2016
    -if can? :create, Speaker
      %h1=link_to "New", new_speaker_path

.wrapper
  -@speakers.each do |speaker|
    .object_box.hvr-sweep-to-left.speaker
      =link_to speaker, class: 'speaker_link' do
        .photo
        .speaker_content
          %h3= speaker.name
          %p= speaker.tagline
      %br
      -if can? [:destroy, :update], Speaker
        =link_to "Delete", speaker, method: :delete
        =link_to "Edit", edit_speaker_path(speaker)
